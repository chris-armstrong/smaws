(rule
 (deps
  (:gen ../../bin/AwsGenerator.exe)
  (:input %%model-file%%))
 (targets
  builders.ml
  builders.mli
  json_serializers.ml
  json_deserializers.ml
  service_metadata.ml
  service_metadata.mli
  types.ml
  types.mli
  operations.ml
  operations.mli
  Smaws_Client_%%service-full-name%%.ml
  Smaws_Client_%%service-full-name%%.mli)
(mode promote)
 (action
  (run
   %{gen}
   -input
   %{input}
   -output
   .
   -targets
   builders
   types
   service_metadata
   serializers
   deserializers
   operations
   module)))

(library
 (name Smaws_Client_%%service-full-name%%)
 (public_name smaws-clients.%%service-short-name%%)
 (modules
  Smaws_Client_%%service-full-name%%
  types
  service_metadata
  json_serializers
  json_deserializers
  operations
  builders)
 (libraries smaws-lib))
